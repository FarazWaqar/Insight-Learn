<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8E6A3"
    android:padding="16dp">

    <!-- Correct and Wrong Inputs Display -->
    <TextView
        android:id="@+id/resultsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corners"
        android:textColor="#000000"
        android:text="Results"
        android:textSize="18sp"
        android:padding="20dp" />

    <!-- Correct Inputs Display -->
    <TextView
        android:id="@+id/correctInputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultsText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corners"
        android:textColor="#000000"
        android:text="Correct Inputs"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

    <!-- Home Button -->
    <Button
        android:id="@+id/homeButtonResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/round_corners"
        android:text="Home"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/settingsButtonResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_corners"
        android:text="Settings"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp" />
</RelativeLayout>
